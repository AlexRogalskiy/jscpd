{
 "name": "jscpd-monorepo",
 "private": true,
 "npmClient": "yarn",
 "useWorkspaces": true,
 "version": "3.3.0-rc.0",
 "scripts": {
   "commit": "npx git-cz",
   "bootstrap": "lerna bootstrap",
   "postinstall": "yarn bootstrap",
   "clean": "lerna run clean",
   "build": "lerna run build",
   "pub": "lerna publish",
   "test": "nyc npm run test:unit",
   "test:unit": "mocha -r source-map-support/register -r ts-node/register packages/*/__tests__/**/*.test.ts",
   "coverage": "run-s build test cov:html cov:check",
   "lint": "eslint --cache --ext .ts packages/*/src",
   "cov": "run-s build test cov:html && open coverage/lcov-report/index.html",
   "cov:html": "nyc report --reporter=lcov",
   "cov:check": "nyc report && nyc check-coverage --lines 96 --functions 95 --branches 80",
   "doc": "run-s doc:html && open docs/index.html",
   "doc:html": "typedoc --out ./docs ./packages",
   "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d docs",
   "reset": "git clean -dfx && git reset --hard && npm i",
   "all": "run-s reset test cov:check doc:html",
  "snyk-protect": "snyk protect",
  "prepare": "npm run snyk-protect"
 },
 "nyc": {
  "reporter": [
   "lcov"
  ],
  "include": [
   "packages/*/src/**/*.ts"
  ],
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true
 },
 "devDependencies": {
  "@istanbuljs/nyc-config-typescript": "^1.0.1",
  "@types/chai": "^4.2.11",
  "@types/mocha": "^7.0.2",
  "@types/sinon": "^9.0.0",
  "@typescript-eslint/eslint-plugin": "^2.30.0",
  "@typescript-eslint/parser": "^2.30.0",
  "chai": "^4.2.0",
  "cz-conventional-changelog": "^3.1.0",
  "eslint": "^6.8.0",
  "eslint-plugin-sonarjs": "^0.5.0",
  "gh-pages": "^2.2.0",
  "git-cz": "^4.3.1",
  "lerna": "^3.20.2",
  "mocha": "^7.1.2",
  "npm-run-all": "^4.1.5",
  "nyc": "^15.0.1",
  "open-cli": "^5.0.0",
  "sinon": "^9.0.2",
  "snyk": "^1.314.0",
  "source-map-support": "^0.5.19",
  "typedoc": "~0.17.6",
  "typedoc-plugin-lerna-packages": "~0.3.0",
  "typescript": "^3.8.3"
 },
 "workspaces": [
  "packages/*"
 ],
 "readmeFilename": "README.md",
 "snyk": true
}
